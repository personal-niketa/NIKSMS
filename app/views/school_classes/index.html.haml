#centerwrap.container
  .row
    .col-md-10
      %h2{style: "font-weight: bold"} Manage Classes
      = link_to new_school_class_path, class: "btn btn-success", style: "margin-bottom: 10px; float:right;"  do
        %i.glyphicon.glyphicon-plus
        Add Class
      .row
      - @school_classes.each do |school_class|
        .col-sm-4
          .panel.panel-primary.text-center
            .panel-heading
              %div
                %h5
                  Class
                  = school_class.class_name
            .panel-body 
              = link_to class_sections_path(school_class_id: school_class.id) do
                %i.glyphicon.glyphicon-eye-open.pull-left
              &nbsp;
              = link_to school_class_path(id: school_class.id), data:{confirm: "Are you sure,you want to delete this Class?"}, method: :delete do
                %i.glyphicon.glyphicon-trash.pull-right