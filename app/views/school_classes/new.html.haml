.container#centerwrap
  %h1 Add New Class
  = form_for @school_class, url: school_classes_path, method: :post do |f|
    .row
      .form-group.col-sm-8
        = f.label :class_name,'Class Name'
        = f.text_field :class_name, class: "form-control" 
    .row
      .col-md-12
        = f.submit "Create Class", class: "btn btn-primary"