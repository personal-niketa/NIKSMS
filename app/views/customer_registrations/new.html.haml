.container#centerwrap
  .row
    .col-sm-8
      = form_for @customer_registration, url: customer_registrations_path, method: :post do |f|
        .row
          .form-group.col-sm-8
            = f.label :first_name,'First Name'
            = f.text_field :first_name, class: "form-control"
        .row
          .form-group.col-sm-8
            = f.label :last_name,'Last Name'
            = f.text_field :last_name, class: "form-control"
        .row
          .form-group.required.col-sm-8
            = f.label :email, 'Email', class: "control-label"
            = f.text_field :email, class: "form-control", required: true
        .row
          .form-group.col-sm-8
            = f.label :source_of_hearing,'Source of hearing'
            = f.select :source_of_hearing, CustomerRegistration.source_of_hearings.keys.map { |w| [w.humanize, w] }, class: "form-control"
        .row
          .form-group.col-sm-8
            = f.label :hobby,'Hobby'
            = f.select :hobby, CustomerRegistration.hobbies.keys.map { |w| [w.humanize, w] }, class: "form-control"
        .row
          .form-group.col-sm-8
            = f.label :country, 'Country'
            = f.country_select :country,  ["United States"], {}, class: "form-control" 
        .row
          .col-md-12
            = f.submit "Create Admission", class: "btn btn-primary"