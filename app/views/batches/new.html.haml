.container#centerwrap
  %h1 Add New Batch
  = form_for @batch, url: batches_path, method: :post do |f|
    .row
      .form-group.col-sm-8
        = f.label :batch_name,'Batch Name'
        = f.text_field :batch_name, class: "form-control"
    .row
      .col-md-12
        = f.submit "Create Batch", class: "btn btn-primary"