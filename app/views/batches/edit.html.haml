.container#centerwrap
  %h1 Edit Batch
  = form_for @batch, url: batch_path(id: @batch.id), method: :put do |f|
    .row
      .form-group.col-sm-8
        = f.label :batch_name,'Batch Name'
        = f.text_field :batch_name, class: "form-control"
    .row
      .col-md-12
        = f.submit "Update Batch", class: "btn btn-primary"