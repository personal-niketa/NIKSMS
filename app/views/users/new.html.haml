.container#centerwrap
  %h1 Add New User
  = form_for @user, url: create_user_users_path, method: :post do |f|
    .row
      .form-group.col-sm-8
        = f.label :email,'Email'
        = f.text_field :email, class: "form-control"
    .row
      .form-group.col-sm-8
        = f.label :first_name,'First Name'
        = f.text_field :first_name, class: "form-control"
    .row
      .form-group.col-sm-8
        = f.label :last_name,'Last Name'
        = f.text_field :last_name, class: "form-control"
    .row
      .form-group.col-sm-8
        = f.label :phone,'Contact'
        = f.text_field :phone, class: "form-control" 
    .row
      .form-group.col-sm-8
        = f.label :details,'Description'
        = f.text_field :details, class: "form-control"
    .row
      .form-group.col-sm-8
        = f.label :school_role,'Choose Role'
        = f.select :school_role, prepare_user_roles, class: "form-control"  
    .row
      .col-md-12
        = f.submit "Create User", class: "btn btn-primary"